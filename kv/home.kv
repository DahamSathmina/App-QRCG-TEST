<HomeScreen>:
        MDBoxLayout:
        orientation: "vertical"
        MDToolbar:
            title: "Home"
            right_action_items: [["cog", lambda x: root.go_settings()], ["account", lambda x: root.go_profile()]]
        ScrollView:
            MDList:
                id: task_list
        MDBoxLayout:
            size_hint_y: None
            height: dp(60)
            spacing: dp(10)
            MDTextField:
                id: task_title
                hint_text: "Task title"
            MDRaisedButton:
                text: "Add"
                on_release: root.add_task(task_title.text,"")
