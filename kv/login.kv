<LoginScreen>:
        MDBoxLayout:
        orientation: "vertical"
        padding: 50
        spacing: 20

        MDLabel:
            id: login_label
            text: "Login"
            halign: "center"
            font_style: "H4"

        MDTextField:
            id: username
            hint_text: "Username"

        MDTextField:
            id: password
            hint_text: "Password"
            password: True

        MDRaisedButton:
            text: "Login"
            pos_hint: {"center_x": 0.5}
            on_release: root.login_user()

        MDRaisedButton:
            text: "New User? Register"
            pos_hint: {"center_x": 0.5}
            on_release: app.root.current = "register"
