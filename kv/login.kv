<LoginScreen>:
        MDBoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(20)
        MDLabel:
            text: "Login"
            halign: "center"
            font_style: "H3"
        MDTextField:
            id: username
            hint_text: "Username"
        MDTextField:
            id: password
            hint_text: "Password"
            password: True
        MDLabel:
            id: login_label
            text: ""
            theme_text_color: "Error"
        MDRaisedButton:
            text: "Login"
            on_release: root.login_user()
        MDFlatButton:
            text: "Register"
            on_release: app.root.current = "register"
