<ProfileScreen>:
        MDBoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 20

        MDLabel:
            text: "Profile"
            halign: "center"
            font_style: "H4"

        MDTextField:
            id: email
            hint_text: "Email"

        Image:
            id: avatar
            source: "assets/default_avatar.png"
            size_hint: None, None
            size: 100, 100
            pos_hint: {"center_x": 0.5}

        MDRaisedButton:
            text: "Update Profile"
            pos_hint: {"center_x":0.5}
            on_release: root.update_profile(email.text)

        MDLabel:
            id: status
            text: ""
            halign: "center"

        MDRaisedButton:
            text: "Back to Home"
            pos_hint: {"center_x":0.5}
            on_release: app.root.current = "home"
