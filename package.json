{
  "name": "ods-qrc-generator",
  "version": "1.2.0",
  "description": "ODS QR Code Generator",
  "author": "Daham Sathmin <sathminadaham75@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.ods.qrcodegen",
    "productName": "ODS QRC Generator",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "Assets/ico/icon-512.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ODS QRC Generator",
      "installerIcon": "Assets/ico/icon-512.ico",
      "uninstallerIcon": "Assets/ico/icon-512.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "Assets/mac/mac-512.icns"
    },
    "linux": {
      "target": ["AppImage", "deb", "rpm"],
      "icon": "Assets/linux/linux-512-maskable.png"
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.13.1"
  }
}
